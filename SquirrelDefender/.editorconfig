# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
#end_of_line = lf
#charset = utf-8
#trim_trailing_whitespace = true
insert_final_newline = true

[*.cpp]
indent_style = space
indent_size = 4
max_line_length = 120

[*.h]
indent_style = space
indent_size = 4
max_line_length = 120

# C++ specific rules (you can customize more as needed)
[*.{cpp,h}]
# This ensures that preprocessor directives are not indented
csharp_preprocessor_directives = true